<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/d10"
    android:layout_marginBottom="@dimen/d15">

    <TextView
        android:id="@+id/tvLikeUnLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d20"
        android:background="@drawable/likebtn"
        android:padding="@dimen/d3"
        android:textSize="@dimen/d11"
        android:textColor="@android:color/white"
        android:paddingLeft="@dimen/d3"
        android:paddingRight="@dimen/d3"
        android:text="@string/like"/>

    <TextView
        android:id="@+id/tvFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d20"
        android:textStyle="bold"
        android:text="from pranay"/>
</LinearLayout>