<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/d6"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:id="@+id/llImgtxtRow">

    <include
        android:id="@+id/llDate"
        layout="@layout/row_date"
        android:visibility="gone" />

    <include layout="@layout/row_title" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d20"
        android:layout_marginRight="@dimen/d20"
        android:layout_marginTop="@dimen/d10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="@dimen/app_setting_row_h"
            android:layout_height="@dimen/app_setting_row_h"/>

        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d30"
            android:maxLines="2" />
    </LinearLayout>

    <include layout="@layout/row_like_from"
        android:id="@+id/llLiketxtImgRow"/>
    <include layout="@layout/row_like_from_textimg"
        android:visibility="gone"
        android:id="@+id/llLiketxtImgDetails"/>
</LinearLayout>